{
  "name": "masto",
  "description": "Mastodon API client for JavaScript, TypeScript, Node.js, browsers",
  "private": false,
  "version": "5.0.0-rc7",
  "author": "Ryo Igarashi <n33t5hin@gmail.com>",
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "npm-run-all test:*",
    "test:jest": "jest --coverage --runInBand --config=jest.config.cjs",
    "test:eslint": "eslint -c .eslintrc.json ./src/**/*.ts --cache",
    "test:spellcheck": "cspell '{src,examples}/**/*.{ts,tsx,js,json,md}'",
    "build": "rollup -c rollup.config.cjs",
    "prepublishOnly": "yarn run test && yarn run build",
    "docs:build": "typedoc ./src/entrypoints/nodejs.ts && touch ./docs/.nojekyll"
  },
  "dependencies": {
    "@mastojs/ponyfills": "^1.0.4",
    "change-case": "^4.1.2",
    "eventemitter3": "^5.0.0",
    "isomorphic-ws": "^5.0.0",
    "semver": "^7.3.7",
    "ws": "^8.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.3",
    "@rollup/plugin-json": "^5.0.2",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.17",
    "@types/semver": "^7.3.10",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.45.0",
    "codecov": "^3.8.3",
    "cspell": "^6.15.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "iterator-helpers-polyfill": "^2.2.8",
    "jest": "^29.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rollup": "^3.5.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "semantic-release": "^19.0.3",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.20",
    "typescript": "^4.9.3"
  },
  "files": [
    "README.md",
    "dist",
    "!**/__tests__",
    "!**/__mocks__"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neet/masto.js.git"
  },
  "keywords": [
    "mastodon"
  ],
  "bugs": {
    "url": "https://github.com/neet/masto.js/issues"
  },
  "homepage": "https://github.com/neet/masto.js#readme"
}
