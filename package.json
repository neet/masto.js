{
  "name": "masto",
  "description": "Mastodon API client for JavaScript, TypeScript, Node.js, browsers",
  "private": false,
  "version": "2.5.0-rc2",
  "author": "Ryo Igarashi <n33t5hin@gmail.com>",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "browser": "dist/browser.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:jest": "jest --coverage --config=jest.config.js",
    "test:tslint": "tslint -c tslint.yml 'src/**/*.{ts,tsx}'",
    "test:prettier": "prettier -c 'src/**/*.{ts,tsx}'",
    "build": "rollup -c rollup.config.js",
    "prepublishOnly": "yarn run test && yarn run build",
    "docs:build": "typedoc ./src && touch ./docs/.nojekyll"
  },
  "dependencies": {
    "@types/ws": "^6.0.1",
    "axios": "^0.19.0",
    "eventemitter3": "^3.1.2",
    "isomorphic-form-data": "^2.0.0",
    "isomorphic-ws": "^4.0.1",
    "normalize-url": "^4.3.0",
    "semver": "^6.1.1",
    "simplytyped": "^3.2.2",
    "ts-optchain": "^0.1.7",
    "ws": "^6.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.8",
    "@types/semver": "^6.0.0",
    "codecov": "^3.5.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rollup": "^1.15.6",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.0.3",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-typescript2": "^0.21.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^2.0.1",
    "typescript": "^3.5.2",
    "typescript-tslint-plugin": "^0.5.0"
  },
  "files": [
    "README.md",
    "dist",
    "!**/__tests__",
    "!**/__mocks__"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neet/masto.js.git"
  },
  "keywords": [
    "mastodon"
  ],
  "bugs": {
    "url": "https://github.com/neet/masto.js/issues"
  },
  "homepage": "https://github.com/neet/masto.js#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "tslint --fix",
        "prettier --write",
        "git add"
      ]
    }
  }
}
